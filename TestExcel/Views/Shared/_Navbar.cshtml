<style>
    ul#notiContent {
        max-height: 240px;
        overflow: auto;
        padding: 0px;
        margin: 0px;
    }

        ul#notiContent li {
            border-bottom: 2px solid black;
            background-color: #cccccc;
            color: white;
            font-size: 16px;
        }

    #notiContent {
        min-width: 500px;
    }

    .badge {
        position: absolute;
        background-color: red;
        color: white;
        bottom: 25px;
        right: 1px;
    }

    .badge1[data-badge]:after {
        content: attr(data-badge);
        position: absolute;
        top: -10px;
        right: -10px;
        font-size: .7em;
        background-color: red;
        color: white;
        width: 18px;
        height: 18px;
        text-align: center;
        line-height: 18px;
        border-radius: 50%;
        box-shadow: 0 0 1px #333;
    }
</style>
<script>
    $(document).ready(function () {
        $(document).click(function () {
            if ($(".dropdown-menu").show()) {
                $(".dropdown-menu").hide();
            }
        });
        var date = ["M", "T", "W", "H", "F", "S"];
        var datethai = ["วันจันทร์", "วันอังคาร", "วันพุธ", "วันพฤหัสบดี", "วันศุกร์", "วันเสาร์"];
        $.ajax({
            type: 'GET',
            url: '/data/GetNotifications',
            success: function (response) {
                $("#notiContent").empty();
                if (response.length == 0) {
                    $("#notiContent").append($('<li>No data available</li>'));
                }
                else {
                    var count = 0;
                    count = response.length;
                    $("#count").html(count);
                    $("#count").addClass("badge");
                }

                $.each(response, function (index, value) {
                    var tmp_datefirst = date.indexOf(value.SECTION_DATE_First);
                    var tmp_datelast = date.indexOf(value.SECTION_DATE_Last);

                    $("#notiContent").append($('<li><a href="/TimeSchedule/TeSchedule/' + value.SECTION_ID_First + '/' + value.SECTION_CLASSROOM_First + '?SUBJECTid='
                        + value.SUBJECT_ID_First + "_" + value.SUBJECT_ID_Last + '&BR_SEMESTER=' + value.SEMESTER + '&BR_YEAR='
                        + value.YEAR + '&color=#ff0000">'
                        + value.SUBJECT_ID_First + " " + datethai[parseInt(tmp_datefirst)] + " ตอน "
                        + value.SECTION_NUMBER_First + " ห้อง " + value.SECTION_CLASSROOM_First + " เวลา " + value.SECTION_TIME_START_First + ".00-" + value.SECTION_TIME_END_First + ".00 " + value.SEMESTER + "/" + value.YEAR + "<br>"
                        + value.SUBJECT_ID_Last + " "+ datethai[parseInt(tmp_datelast)]
                        + " ตอน " + value.SECTION_NUMBER_Last + " ห้อง " + value.SECTION_CLASSROOM_Last + " เวลา " + value.SECTION_TIME_START_Last + ".00-" + value.SECTION_TIME_END_Last + ".00 " + value.SEMESTER + "/" + value.YEAR + '</a></li>'));
                });
            },
            error: function (error) {
                console.log(error);
            }
        });

        $("#ConfirmSaveAll").click(function () {
                $("#PSaveAll").submit();
            });
            $("#ConfirmSave").click(function () {
                $("#PSingleSave").submit();
            });
            var Arraydata = "@dataID";
            $("#save_all").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/data/Warning',
                    data: { 'data': Arraydata,'semester':'@SEMESTER' ,'year':'@YEAR'},
                    success: function (response) {
                        var count = response.length;
                        if (count == 0) {
                            $("#PSaveAll").submit();
                        }
                        else {
                            $.each(response, function (index, value) {
                                var tmp_datefirst = date.indexOf(value.SECTION_DATE_First);
                                var tmp_datelast = date.indexOf(value.SECTION_DATE_Last);
                                $("#res").append($('<br><p>' + value.SUBJECT_ID_First + ' ' + datethai[parseInt(tmp_datefirst)] + ' ตอน '
                                    + value.SECTION_NUMBER_First + ' ห้อง ' + value.SECTION_CLASSROOM_First + ' เวลา '
                                    + value.SECTION_TIME_START_First + '.00-' + value.SECTION_TIME_END_First + '.00 '
                                    + value.SEMESTER + '/' + value.YEAR + '</p>'
                                    + '<p>' + value.SUBJECT_ID_Last + ' ' + datethai[parseInt(tmp_datelast)]
                                    + ' ตอน ' + value.SECTION_NUMBER_Last + ' ห้อง ' + value.SECTION_CLASSROOM_Last + ' เวลา ' + value.SECTION_TIME_START_Last + '.00-' + value.SECTION_TIME_END_Last + '.00 ' + value.SEMESTER + '/' + value.YEAR + '</p><hr>'));
                            });
                            $("#SaveConfirmationAll").modal();
                        }
                    }
                });
        });
        $("#save").click(function () {
            if ($("#FIRST_SECTION_ID").val() != null || ("#FIRST_SECTION_ID").val() != "" ) {
                $.ajax({
                    type: 'POST',
                    url: '/data/Warning',
                    data: { 'data': Arraydata,'semester':'@SEMESTER' ,'year':'@YEAR'},
                    success: function (response) {
                        var count = response.length;
                        if (count == 0) {
                            $("#PSingleSave").submit();
                        }
                        else {
                            $.each(response, function (index, value) {
                                var tmp_datefirst = date.indexOf(value.SECTION_DATE_First);
                                var tmp_datelast = date.indexOf(value.SECTION_DATE_Last);
                                $("#ress").append($('<br><p>' + value.SUBJECT_ID_First + ' ' + datethai[parseInt(tmp_datefirst)] + ' ตอน '
                                    + value.SECTION_NUMBER_First + ' ห้อง ' + value.SECTION_CLASSROOM_First + ' เวลา '
                                    + value.SECTION_TIME_START_First + '.00-' + value.SECTION_TIME_END_First + '.00 '
                                    + value.SEMESTER + '/' + value.YEAR + '</p>'
                                    + '<p>' + value.SUBJECT_ID_Last + ' ' + datethai[parseInt(tmp_datelast)]
                                    + ' ตอน ' + value.SECTION_NUMBER_Last + ' ห้อง ' + value.SECTION_CLASSROOM_Last + ' เวลา ' + value.SECTION_TIME_START_Last + '.00-' + value.SECTION_TIME_END_Last + '.00 ' + value.SEMESTER + '/' + value.YEAR + '</p><hr>'));
                            });
                            $("#SaveConfirmation").modal();
                        }
                    }
                });

            }
        });

        $(".noti").click(function () {
            $("#notiContent").toggle();
        });
    });
</script>

<div class="modal fade" id="SaveConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>แจ้งเตือน:มีวิชาเรียนชน</h4>
            </div>
            <div class="modal-body">

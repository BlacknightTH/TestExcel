<style>
    ul#notiContent {
        max-height: 240px;
        overflow: auto;
        padding: 0px;
        margin: 0px;
    }

        ul#notiContent li {
            border-bottom: 2px solid black;
            background-color: #cccccc;
            color: white;
            font-size: 16px;
        }

    #notiContent {
        min-width: 500px;
    }

    .badge {
        position: absolute;
        background-color: red;
        color: white;
        bottom: 25px;
        right: 1px;
    }

    .badge1[data-badge]:after {
        content: attr(data-badge);
        position: absolute;
        top: -10px;
        right: -10px;
        font-size: .7em;
        background-color: red;
        color: white;
        width: 18px;
        height: 18px;
        text-align: center;
        line-height: 18px;
        border-radius: 50%;
        box-shadow: 0 0 1px #333;
    }
</style>
@if (Session["Username"] != null)
{
    <script>
        function myFunction() {
            var input, filter, ul, li, a, i, txtValue;
            input = $("#myInput");
            filter = input.val();
            li = $("#notiContent li");
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByTagName("a")[0];
                txtValue = a.textContent || a.innerText;
                if (txtValue.indexOf(filter) > -1) {
                    li[i].style.display = "";
                } else {
                    li[i].style.display = "none";
                }
            }
        }

        $(document).ready(function () {
            var form = $("#PSaveAll").serialize();
        //$(document).click(function () {
        //    if ($(".dropdown-menu").show()) {
        //        $(".dropdown-menu").hide();
        //    }
        //});
        var date = ["M", "T", "W", "H", "F", "S"];
        var datethai = ["วันจันทร์", "วันอังคาร", "วันพุธ", "วันพฤหัสบดี", "วันศุกร์", "วันเสาร์"];
        $.ajax({
            type: 'GET',
            url: '/data/GetNotifications',
            success: function (response) {
                $("#notiContent").empty();
                if (response.length == 0) {
                    $("#notiContent").append($('<li>No data available</li>'));
                }
                else {
                    var count = 0;
                    count = response.length;
                    $("#count").html(count);
                    $("#count").addClass("badge");
                    $("#notiContent").append($('<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search" style="min-width: 500px;">'));
                }

                $.each(response, function (index, value) {
                    var tmp_datefirst = date.indexOf(value.SECTION_DATE_First);
                    var tmp_datelast = date.indexOf(value.SECTION_DATE_Last);

                    //$("#notiContent").append($('<li><a href="/TimeSchedule/TeSchedule/' + value.SECTION_ID_First + '/' + value.SECTION_CLASSROOM_First + '?SUBJECTid='

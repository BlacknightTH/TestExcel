                    {
                        var first = Model.Where(x => x.SUBJECT_ID == item.SUBJECT_ID && x.SECTION_DATE == date[a] && x.SECTION_BRANCH_NAME == item.SECTION_BRANCH_NAME).First();
                        var second = Model.Where(x => x.SUBJECT_ID == item.SUBJECT_ID && x.SECTION_DATE == date[a] && x.SECTION_BRANCH_NAME == item.SECTION_BRANCH_NAME).Last();
                        int tmp_first = int.Parse(first.SECTION_TIME_START.ToString());
                        int tmp_last = int.Parse(second.SECTION_TIME_END.ToString());
                        var TIME = (tmp_last - tmp_first);
                        <tr>
                            <td>
                                @Html.CheckBox("check" + i)
                            </td>
                            <td>
                                @i
                            </td>
                            <td>
                                @item.SUBJECT_ID
                                @Html.Hidden("subject_id", item.SUBJECT_ID)
                                @Html.Hidden("subject_hour", TIME)
                            </td>
                            <td>
                                @item.SUBJECT_NAME
                                @Html.Hidden("subject_name", item.SUBJECT_NAME)
                            </td>
                            <td>
                                @item.SUBJECT_CREDIT
                                @Html.Hidden("subject_credit", item.SUBJECT_CREDIT)
                            </td>
                            <td>
                                @item.SECTION_NUMBER
                                @Html.Hidden("subject_number", item.SECTION_NUMBER)
                            </td>
                        </tr>
                    }
                }
            }
        }

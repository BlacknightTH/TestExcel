                            var tid = date[a] + "id_" + b;
                            var tsubjectid = date[a] + "subjectid_" + b;
                            var tname = date[a] + "name_" + b;
                            var tnumber = date[a] + "number_" + b;
                            var tbranch = date[a] + "branch_" + b;
                            var tprofessor = date[a] + "professor_" + b;
                            var ttimestart = date[a] + "timestart_" + b;
                            var ttimeend = date[a] + "timeend_" + b;
                            var tdate = date[a] + "date_" + b;
                            var WhereTimeDate = Model.Where(x => x.SECTION_TIME_START == b && x.SECTION_DATE == date[a]);
                            var check = WhereTimeDate.LastOrDefault();
                            var Bcolor = Model.Where(x => x.SUBJECT_CREDIT == "3(3-0-6)").Any();
